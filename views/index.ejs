<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Spotify Player</title>
  <link rel="stylesheet" href="/styles/style.css">
</head>
<body>
  <div class="container">
    <h1>Spotify Player</h1>
    
    <% if (track) { %>
      <div class="track-info">
        <img src="<%= track.album.images[0].url %>" alt="Album Art">
        <div>
          <h2><%= track.name %></h2>
          <p><%= track.artists.map(artist => artist.name).join(", ") %></p>
          <p><%= track.album.name %></p>
        </div>
      </div>
    <% } else { %>
      <p>No track playing</p>
    <% } %>
    
    <div class="controls">
      <button onclick="window.location.href='/play'">Play</button>
      <button onclick="window.location.href='/pause'">Pause</button>
      <button onclick="window.location.href='/skip'">Next</button>
      <button onclick="window.location.href='/previous'">Previous</button>
    </div>
  </div>
</body>
</html>
